    <script type="text/javascript">
    
    	$.ajaxSetup({
    		beforeSend: function(xhr) {
    			xhr.setRequestHeader('X-CSRF-Token',
    			$('meta[name="csrf-token"]').attr('content'));
    		}
    	});
    	$("#register").click(function(e) {
    		console.log("clicked");
    		$.ajax({
    			type: "post",
    			url: '/teaser',
    			data: {"email":$("#email").val() },
    			success: function() { $("#result").css("color", "green"); $("#result").html("Thanks for signing up. We'll let ya know.");},
    			error: function() { $("#result").css("color", "red"); $("#result").html("Sign up once with your tufts email."); }
    		});
    	});
    </script>
